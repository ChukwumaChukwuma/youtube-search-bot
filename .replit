entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "freetype", "gitFull", "glibcLocales", "lcms2", "libGL", "libGLU", "libiconv", "libimagequant", "libjpeg", "libjpeg_turbo", "libpng", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "pkg-config", "playwright-driver", "rustc", "tcl", "tk", "which", "zlib"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Start Full Stack"

[[workflows.workflow]]
name = "Start Web Server"
author = 38222619
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_server.py"

[[workflows.workflow]]
name = "Start API Server"
author = 38222619
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python api_server.py"

[[workflows.workflow]]
name = "Start Full Stack"
author = 38222619
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python api_server.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_server.py"

[[ports]]
localPort = 5000
externalPort = 80
