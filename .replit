entrypoint = "main.py"
modules = ["python-3.11"]

[env]
REPLIT_DISABLE_PACKAGE_LAYER = "1"

[nix]
channel = "stable-24_05"
packages = ["openssl", "pkg-config", "playwright-driver", "which"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "DEPLOYMENT_MODE=1 python main.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Start Full Stack"

[[workflows.workflow]]
name = "Start Web Server"
author = 38222619
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_server.py"

[[workflows.workflow]]
name = "Start API Server"
author = 38222619
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python api_server.py"

[[workflows.workflow]]
name = "Start Full Stack"
author = 38222619
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec" 
args = "python main.py"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000
